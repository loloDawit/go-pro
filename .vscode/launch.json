{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Project", // Run the build task before launching
            "internalConsoleOptions": "openOnSessionStart", // Automatically open the internal console on session start
            "showLog": true, // Display logs in the debug console
            "trace": "verbose" // Enable verbose logging for better troubleshooting
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "Build Project",
                "type": "shell",
                "command": "go build ./...", // Build the entire project
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": ["$go"]
            }
        ]
    }
}
